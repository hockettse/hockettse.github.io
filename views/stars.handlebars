<form class="Add">
    <fieldset>
        <legend> Would you like to add a new star? </legend>
        <label> Name:
            <input type="text" name="name" id="name" required minlength="1" maxlength="16" width="17" spellcheck="true">
        </label>
        <label>Classification:
            <input type="text" name="classification" id="classification" required minlength="1" maxlength="16" width="17" spellcheck="true">
        </label>
        <label>Mass:
            <input type="number" name="mass" id="mass" required width ="10">
        </label>
        <label>Age(Years):
            <input type="number" name="age" id="age" required width = "5">
        </label>
        <label>Planetary System:
            <input type="number" name="planetSys" id="planetSys" required width = "5">
        </label>
        <label>Constellation:
        <input type="number" name="constellation" id="constellation" required width ="5">
        </label>
        <label>Galaxy:
            <input type="number" name="galaxy" id="galaxy" required width = "5">
        </label>
        <button type="button" class="addStarButton" id="addStarButton">Add Star</button>
    </fieldset>
</form>

<br>

